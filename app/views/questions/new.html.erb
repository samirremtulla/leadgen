<h1>Ask a question </h1>

<%= form_for @question do |f| %>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
</p>
<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>
  <div class="form-actions">
    <%= f.submit 'Submit Question', :class => 'btn' %>
  </div>

<% end %>